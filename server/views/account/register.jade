extends ../shared/layout

block main-content
    .container
        if errors
            .panel.panel-danger
                errors
        .col-md-6.col-md-offset-3
            .well
                form(method="post", action="", class='form-horizontal' name="registerForm")
                    fieldset
                        legend Register
                        .form-group
                            label(for="username", class='col-md-2 control-label') Username
                            .col-md-10
                                input(id="username" class="form-control" type="text" name="username" placeholder="Username" ng-model="user.username" required)
                        .form-group
                            label(for="firstName", class='col-md-2 control-label') First Name
                            .col-md-10
                                input(id="firstName" class="form-control" type="text" name="firstName" placeholder="First Name" ng-model="user.firstName" required)
                        .form-group
                            label(for="lastName", class='col-md-2 control-label') Last Name
                            .col-md-10
                                input(id="lastName" class="form-control" type="text" name="lastName" placeholder="Last Name" ng-model="user.lastName" required)
                       .form-group
                            label(for="password", class='col-md-2 control-label') Password
                            .col-md-10
                                input(type="password" id="password" class="form-control" name="password" placeholder="Password" ng-model="user.password" required ng-minlength="6")
                                span(ng-show="registerForm.password.$invalid")
                                    | Min. length is 6 characters
                        .form-group
                            label(for="confirmPassword", class='col-md-2 control-label') Confirm Password
                            .col-md-10
                                input(type="password" id="confirmPassword" class="form-control" name="confirmPassword" placeholder="Confirm Password" ng-model="user.confirmPassword" required ng-minlength="6")
                                span(ng-show="registerForm.confirmPassword.$invalid")
                                    | Min. length is 6 characters
                                span(ng-show="user.password != user.confirmPassword")
                                    | Passwords don't match
                        .form-group
                            col-md-10.col-md-offset-2
                                button(type="reset" class="btn btn-default") Cancel
                                button(type="submit" class="btn btn-primary" ng-disabled="registerForm.$invalid") Register